<!DOCTYPE html>
<html>
  <head>
    <title>InsightLoop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "shared/navbar" %>

    <div class="layout-with-sidebar" data-controller="toggle">

      <nav class="sidebar layout-sidebar pt-3" data-toggle-target="hideable">
        <%= render "shared/sidenav", questions: @questions %>
      </nav>


      <main class="layout-main my-4">
        <%= render "shared/flashes" %>

        <%= link_to "#",
                    class: "d-none nav-link text-dark",
                    data: { action: "click->toggle#call", toggle_target: "show" } do %>
          <i class="fa-regular fa-square-caret-right"></i>
        <% end %>

        <%= yield %>
      </main>
        </div>
      </div>
    </div>
  </body>
</html>
